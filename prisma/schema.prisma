generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Login {
  id       Int     @id @default(sequence())
  email    String  @unique
  name     String?
  password String?

  @@map(name: "login")
}

model RegisterUser {
  id             Int     @id @default(sequence())
  userInId       String  @unique @default(uuid())
  userInEmail    String  @unique
  userInPhone    String?
  userName       String?
  userInPassword String

  @@map(name: "registerUser")
}
